{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode-custom",
  "model": "synthetic/hf:zai-org/GLM-4.7",
  // Define permissions for model tooling
  "permission": {
    "question": "allow",
    "edit": "ask",
    "bash": {
      "*": "ask",
      // Allowed by default
      "make": "allow",
      "sleep": "allow",
      /// File Exploration
      "pwd": "allow",
      "ls *": "allow",
      "find *": "allow",
      "cat": "allow",
      "tail": "allow",
      "head": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "file": "allow",
      "stat": "allow",
      "wc": "allow",
      "tree": "allow",
      /// Git info commands
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "git show": "allow",
      "git rev-parse": "allow",
      /// Command info
      "which": "allow",
      "brew list": "allow",
      "* --version": "allow",
      // Denied by default
      "git *": "deny",
    },
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask",
  },
  "agent": {
    "plan": {
      "model": "synthetic/hf:zai-org/GLM-4.7",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": true,
      },
    },
    "build": {
      "model": "synthetic/hf:zai-org/GLM-4.7",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
      },
    },
  },
  "mcp": {
    "pdf_reader": {
      "type": "local",
      "command": ["uvx", "pdf-reader-mcp"],
      "timeout": 60000,
      "enabled": true,
    },
  },
}
